#!/usr/bin/bash

if [ -d "/mnt/c" ]
then
    C_DIR="/mnt/c"
else
    if [ -d "/c" ]
    then
        C_DIR="/c"
    else
        echo "ERROR: No Windows drives mapped."
        exit 1
    fi
fi

MSBUILD=$(ls ${C_DIR}/Program\ Files/Microsoft\ Visual\ Studio/*/*/MSBuild/Current/Bin/MSBuild.exe | head -n 1)

"${MSBUILD}" -p:Platform="x64" -nologo -p:GenerateFullPaths=true "-clp:ForceConsoleColor" -verbosity:m -m "$@" | sed -e "s@\\\\@/@g" -e "s@C:/@${C_DIR}/@g"
